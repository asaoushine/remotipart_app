<%- model_class = RemotipartPic -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @remotipart_pic.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @remotipart_pic.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:topimage) %>:</strong></dt>
  <dd><%= @remotipart_pic.topimage %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              remotipart_pics_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_remotipart_pic_path(@remotipart_pic), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              remotipart_pic_path(@remotipart_pic),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
